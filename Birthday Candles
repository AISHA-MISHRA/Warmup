#include <iostream>

using namespace std;

int main() {
    
    int n, s = 0, a, b;
    
    cin >> n;
    
    for( int i=0; i<n; i++ ) {
        cin >> b;
        
        if( b > s ) {
            s = b; 
            a = 1;
        }
        else if( b == s )
            a++;
    }
    
    cout << a;
    
    
    return 0;
}
